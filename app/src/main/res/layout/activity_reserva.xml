                    app:layout_constraintStart_toStartOf="@+id/guideline6" android:layout_marginStart="8dp"
                    android:fontFamily="@font/raleway_medium" app:layout_constraintEnd_toStartOf="@+id/guideline18"
                    android:layout_marginEnd="8dp" android:textSize="20sp" app:layout_constraintHorizontal_bias="1.0"
